<%
   def url(city)

      city.split(' ').join('-').downcase

   end
%>
<!-- header area start  -->
<header>
   <div id="header-sticky" class="header__two header__two-space menu-sticky">
      <div class="container">
         <div class="row align-items-center">
            <div class="col-xl-2 col-6">
               <div class="logo">
               <%= link_to image_tag("/assets/img/logo/logo.png"), root_path %>
               </div>
            </div>
            <div class="col-xl-7 d-none d-xl-block">
               <div class="main-menu main-menu-2 t-right">
                  <nav id="mobile-menu">
                     <ul>

                        <li class="menu-item-has-children">
                           <a href="services.html">services</a>
                           <ul class="sub-menu">
                              <li><a href="same-day-delivery">Same Day Delivery</a></li>
                              <li><a href="next-day-delivery">Next Day Delivery</a></li>
                           </ul>
                        </li>

                        <li class="menu-item-has-children">
                           <a href="#">locations</a>
                           <ul class="sub-menu">
                              <% cities.each do | city | %>
                              <li><a href="<%= url( city ) %>"><%= city %></a></li>
                              <% end %>
                           </ul>
                        </li>

                        <li class="menu-item-has-children">
                           <a href="about-american-courier-services">about</a>
                           <ul class="sub-menu">
                              <li><a href="faq">FAQ</a></li>
                              <li><a href="careers">Careers</a></li>
